{{#if session.isAuthenticated}}
  <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
    {{#link-to "index" class="navbar-brand col-sm-3 col-md-2 mr-0"}}
      Resuelve: {{session.data.authenticated.user.nombre}} {{session.data.authenticated.user.apellido}}
    {{/link-to}}
    <ul class="navbar-nav px-3">
      <li class="nav-item text-nowrap">
        {{#link-to "logout" class="nav-link"}}
          {{fa-icon "sign-out-alt"}} Sign out
        {{/link-to}}
      </li>
    </ul>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <nav class="col-md-2 d-none d-md-block bg-light sidebar">
        <div class="sidebar-sticky">
          <ul class="nav flex-column">
            <li class="nav-item">
              {{#link-to "index" class="nav-link"}}
                {{fa-icon "home"}}
                Dashboard <span class="sr-only">(current)</span>
              {{/link-to}}
            </li>
          </ul>

          <ul class="nav flex-column mb-2">
            <li class="nav-item">
              {{#link-to "users" class="nav-link"}}
                {{fa-icon "users"}}
                Users
              {{/link-to}}
            </li>
            <li class="nav-item">
              {{#link-to "my-movements" class="nav-link"}}
                {{fa-icon "table"}}
                My movements
              {{/link-to}}
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>

  <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    {{outlet}}
  </main>
{{/if}}
{{!-- This outlet will be used for non-authenticated actions like login, signup, etc --}}
{{ outlet "external" }}